<!DOCTYPE html>
<html lang="en">
	
	<head>
		<% include ../../partials/head %>
		<!-- NProgress -->
		<link href="/vendors/nprogress/nprogress.css" rel="stylesheet">
		<!-- iCheck -->
		<link href="/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
		<!-- Datatables -->
		<link href="/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">
		<% include ../../partials/post_head %>
	</head>
	
	<body class="nav-md">
		<div class="container body">
			<div class="main_container">
				<% include ../../partials/sidebar %>
				<% include ../../partials/topnav %>
				
				<div class="right_col" role="main">
					<div class="">
						<div class="page-title">
							<div class="title_left">
								<h3>Ver artigo</h3>
							</div>
							
							<div class="title_right">
								<div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
									<div class="input-group">
										<input type="text" class="form-control" placeholder="Search for...">
										<span class="input-group-btn">
											<button class="btn btn-default" type="button">Go!</button>
										</span>
									</div>
								</div>
							</div>
						</div>
						
						<div class="clearfix"></div>
						
						<div class="row">       
							
							<div class="col-xs-12">
								<div class="x_panel">
									
									<div class="x_title">
										<h2><%= artigo.CodArtigo %></h2>
										<ul class="nav navbar-right panel_toolbox">
											<li>
												<a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
											</li>
											<li class="dropdown">
												<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
												<ul class="dropdown-menu" role="menu">
													<li><a href="#">Settings 1</a>
													</li>
													<li><a href="#">Settings 2</a>
													</li>
												</ul>
											</li>
										</ul>
										<div class="clearfix"></div>
									</div>
									
									<div class="x_content">
										
										<%= artigo.CodArtigo %>
										<br>
										<%= artigo.DescArtigo %>
										<br>
										<%= artigo.STKAtual %>
										<br>
										
									</div>
									
								</div>
							</div>
							
							<div class="col-xs-12">
								<div class="x_panel">
									
									<div class="x_title">
										<h2><a href="/compras">Compras</a></h2>
										<ul class="nav navbar-right panel_toolbox">
											<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
											<li><a class="close-link"><i class="fa fa-close"></i></a></li>
										</ul>
										<div class="clearfix"></div>
									</div>
									
									<div class="x_content">
										<div class="row">
											<table id="comprasTable" class="table table-striped table-bordered bulk_action">
												<thead>
													<tr>
														<th class="column-title">Compra ID</th>
														<th class="column-title">Entidade</th>
														<th class="column-title">Data</th>
														<th class="column-title">Total Mercadoria</th>
														<th class="column-title">Linha Documento</th>
													</tr>
												</thead>
												
												<tbody>
													<% (compras).forEach(function(ven){ %>
													<tr>
														<td><a href="/compras/<%= ven.iddoc %>"><%= ven.iddoc %></a></td>
														<td><a href="/fornecedores/<%= ven.entidade %>"><%= ven.entidade %></a></td>
														<td><%= ven.date %></td>
														<td><%= ven.quantity %></td>
														<td><%= ven.linha %></td>
													</tr>
													<% }); %>
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
							
							<div class="col-xs-12">
								<div class="x_panel">
									
									<div class="x_title">
										<h2><a href="/vendas">Vendas</a></h2>
										<ul class="nav navbar-right panel_toolbox">
											<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
											<li><a class="close-link"><i class="fa fa-close"></i></a></li>
										</ul>
										<div class="clearfix"></div>
									</div>
									
									<div class="x_content">
										<div class="row">
											<table id="vendasTable" class="table table-striped table-bordered bulk_action">
												<thead>
													<tr>
														<!-- <th>
															<input type="checkbox" id="check-all" class="flat">
														</th> -->
														<th class="column-title">Venda ID</th>
														<th class="column-title">Entidade</th>
														<th class="column-title">Data</th>
														<th class="column-title">Total Mercadoria</th>
														<th class="column-title">Linha Documento</th>
														<!--<th class="bulk-actions" colspan="7">
															<a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
														</th> -->
													</tr>
												</thead>
												
												<tbody>
													<% (vendas).forEach(function(ven){ %>
													<tr>
														<!-- <td class="a-center ">
															<input type="checkbox" class="flat" name="table_records">
														</td> -->
														<td><a href="/vendas/<%= ven.iddoc %>"><%= ven.iddoc %></a></td>
														<td><a href="/clientes/<%= ven.entidade %>"><%= ven.entidade %></a></td>
														<td><%= ven.date %></td>
														<td><%= ven.quantity %></td>
														<td><%= ven.linha %></td>
													</tr>
													<% }); %>
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div>
							
						</div>
					</div>
				</div>
				
				<!-- /page content -->
				
			</div>
			
		</div>
		
		<% include ../../partials/footer %>
		<!-- FastClick -->
		<script src="/vendors/fastclick/lib/fastclick.js"></script>
		<!-- NProgress -->
		<script src="/vendors/nprogress/nprogress.js"></script>
		<!-- iCheck -->
		<script src="/vendors/iCheck/icheck.min.js"></script>
		<!-- Datatables -->
		<script src="/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
		<script src="/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
		<script src="/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
		<script src="/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
		<script src="/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
		<script src="/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
		<script src="/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
		<script src="/vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
		<script>
			$('#comprasTable').dataTable();
			$('#vendasTable').dataTable();
		</script>
		<% include ../../partials/post_footer %>
	</body>
	
</html>
