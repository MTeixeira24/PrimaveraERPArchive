<!DOCTYPE html>
<html lang="en">
	
	<head>
		<% include ../../partials/head %>
		<!-- NProgress -->
		<link href="/vendors/nprogress/nprogress.css" rel="stylesheet">
		<!-- iCheck -->
		<link href="/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
		<!-- Datatables -->
		<link href="/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
		<link href="/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">
		<% include ../../partials/post_head %>
	</head>
	
	<body class="nav-md">
		<div class="container body">
			<div class="main_container">
				<% include ../../partials/sidebar %>
				<% include ../../partials/topnav %>
				
				<div class="right_col" role="main">
					<div class="">
						<div class="row top_tiles">
							<div class="animated flipInY col-md-4 col-sm-12 col-xs-12">
								<div class="tile-stats">
									<div class="icon"><i class="fa fa-list-alt"></i></div>
									<div class="count"><%= artigos.length %></div>
									<h3>Artigos</h3>
								</div>
							</div>
							<div class="animated flipInY col-md-4 col-sm-6 col-xs-12">
								<div class="tile-stats">
									<div class="icon"><i class="fa fa-exclamation-circle"></i></div>
									<div class="count"><%= artigosMaxStock.length %></div>
									<h3>Artigos max stock</h3>
									</div>
							</div>
							<div class="animated flipInY col-md-4 col-sm-6 col-xs-12">
								<div class="tile-stats">
									<div class="icon"><i class="fa fa-exclamation-triangle"></i></div>
									<div class="count"><%= artigosSemStock.length %></div>
									<h3>Artigos sem stock</h3>
								</div>
							</div>
						</div>
						
						<div class="clearfix"></div>
						
						<div class="row">
							
							<div class="col-xs-12">
								<div class="x_panel">
									
									<div class="x_title">
										<h2>Todos Artigos</h2>
										<ul class="nav navbar-right panel_toolbox">
											<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
											<li><a class="close-link"><i class="fa fa-close"></i></a></li>
										</ul>
										<div class="clearfix"></div>
									</div>
									
									<div class="x_content">
										<table id="artigosTable" class="table table-striped table-bordered bulk_action">
											<thead>
												<tr>
													<th class="column-title">Código</th>
													<th class="column-title">Descrição</th>
													<th class="column-title">Stock</th>
												</tr>
											</thead>
											<tbody>
												<% artigos.forEach(function(art){ %>
												<tr>
													<td><a href="/artigos/<%= art.CodArtigo %>"><%= art.CodArtigo %></a></td>
													<td><a href="/artigos/<%= art.CodArtigo %>"><%= art.DescArtigo %></a></td>
													<td><%= art.STKAtual %></td>
												</tr>
												<% }); %>
											</tbody>
										</table>
									</div>
									
								</div>
							</div>
							
							<div class="col-sm-6 col-xs-12">
								<div class="x_panel">
									
									<div class="x_title">
										<h2>Artigos Sem Stock</h2>
										<ul class="nav navbar-right panel_toolbox">
											<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
											<li><a class="close-link"><i class="fa fa-close"></i></a></li>
										</ul>
										<div class="clearfix"></div>
									</div>
									
									<div class="x_content">
										<table id="artigosSemStockTable" class="table table-striped table-bordered bulk_action">
											<thead>
												<tr>
													<th class="column-title">Código</th>
													<th class="column-title">Descrição</th>
												</tr>
											</thead>
											<tbody>
												<% artigosSemStock.forEach(function(art){ %>
												<tr>
													<td><a href="/artigos/<%= art.CodArtigo %>"><%= art.CodArtigo %></a></td>
													<td><a href="/artigos/<%= art.CodArtigo %>"><%= art.DescArtigo %></a></td>
												</tr>
												<% }); %>
											</tbody>
										</table>
									</div>
									
								</div>
							</div>
							
							<div class="col-sm-6 col-xs-12">
								<div class="x_panel">
									
									<div class="x_title">
										<h2>Artigos Max Stock</h2>
										<ul class="nav navbar-right panel_toolbox">
											<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
											<li><a class="close-link"><i class="fa fa-close"></i></a></li>
										</ul>
										<div class="clearfix"></div>
									</div>
									
									<div class="x_content">
										<table id="artigosMaxStockTable" class="table table-striped table-bordered bulk_action">
											<thead>
												<tr>
													<th class="column-title">Código</th>
													<th class="column-title">Descrição</th>
													<th class="column-title">Stock</th>
												</tr>
											</thead>
											<tbody>
												<% artigosMaxStock.forEach(function(art){ %>
												<tr>
													<td><a href="/artigos/<%= art.CodArtigo %>"><%= art.CodArtigo %></a></td>
													<td><a href="/artigos/<%= art.CodArtigo %>"><%= art.DescArtigo %></a></td>
													<td><%= art.STKAtual %></td>
												</tr>
												<% }); %>
											</tbody>
										</table>
									</div>
									
								</div>
							</div>
							
						</div>
					</div>
				</div>
				
				
				<!--Iterar html pelo conteudo da variavel  artigos definida em routes/artigos.js-->
				<!-- page content -->
				<!-- <div class="right_col" role="main">
					<p>
					<% artigos.forEach(function(art){ %>
					<%= art.CodArtigo %>
					<br/>
					<% }); %>
					
					</p>
				</div> -->
				<!-- /page content -->
				
			</div>
			
		</div>
		
		<% include ../../partials/footer %>
		
		<!-- FastClick -->
		<script src="/vendors/fastclick/lib/fastclick.js"></script>
		<!-- NProgress -->
		<script src="/vendors/nprogress/nprogress.js"></script>
		<!-- iCheck -->
		<script src="/vendors/iCheck/icheck.min.js"></script>
		<!-- Datatables -->
		<script src="/vendors/datatables.net/js/jquery.dataTables.min.js"></script>
		<script src="/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
		<script src="/vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
		<script src="/vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
		<script src="/vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
		<script src="/vendors/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
		<script src="/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
		<script src="/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
		<script src="/vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
		<script src="/vendors/pdfmake/build/vfs_fonts.js"></script>
		<script>
			$('#artigosTable').dataTable();
			$('#artigosSemStockTable').dataTable();
			$('#artigosMaxStockTable').dataTable();
			console.log(<%- JSON.stringify(artigos) %>);
			console.log(<%- JSON.stringify(artigosSemStock) %>);
			console.log(<%- JSON.stringify(artigosMaxStock) %>);
		</script>
		<% include ../../partials/post_footer %>
	</body>
	
</html>
